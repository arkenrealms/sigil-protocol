{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./build",
    "noEmit": false,
    "checkJs": false,
    "allowJs": false,
    "emitDeclarationOnly": false,
    "removeComments": true,
    "sourceMap": true,
    "declaration": true,
    "composite": true
  },
  "exclude": ["node_modules", "build", "**/*.test.ts", "**/*.spec.ts"]
}
